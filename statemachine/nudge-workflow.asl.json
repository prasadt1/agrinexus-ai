{
  "Comment": "Behavioral Nudge Workflow - Send nudges when weather conditions are favorable",
  "StartAt": "GetFarmersForLocation",
  "States": {
    "GetFarmersForLocation": {
      "Type": "Task",
      "Resource": "arn:aws:states:::dynamodb:query",
      "Parameters": {
        "TableName": "${TableName}",
        "IndexName": "GSI1",
        "KeyConditionExpression": "GSI1PK = :location",
        "ExpressionAttributeValues": {
          ":location": {
            "S.$": "$.location"
          }
        }
      },
      "ResultPath": "$.farmers",
      "Next": "ProcessFarmers"
    },
    "ProcessFarmers": {
      "Type": "Map",
      "ItemsPath": "$.farmers.Items",
      "MaxConcurrency": 10,
      "Iterator": {
        "StartAt": "SendNudge",
        "States": {
          "SendNudge": {
            "Type": "Task",
            "Resource": "${NudgeSenderArn}",
            "End": true
          }
        }
      },
      "End": true
    }
  }
}
